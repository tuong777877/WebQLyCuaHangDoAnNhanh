@model IEnumerable<DeAnCNPMNC.Models.Food>
@using DeAnCNPMNC.Models;

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="~/Assets/owlcarousel/assets/owl.carousel.min.css">
<link rel="stylesheet" href="~/Assets/owlcarousel/assets/owl.theme.default.min.css">
<script src="~/Assets/vendor/jquery/jquery.min.js"></script>
<script src="~/Assets/owlcarousel/owl.carousel.js"></script>
<link href="~/Assets/layout/css/styles.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/88d882a928.js" crossorigin="anonymous"></script>
<section class="item content">
    <div class="container">
        <div class="row">
            <div class="text-center">
                <!-- Thẻ Chứa Slideshow -->
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                        <li data-target="#myCarousel" data-slide-to="4"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" style="height:500px;width:100%">
                        <div class="item active">
                            <img src="~/Assets/ImagesSlideshow/slideshow1.jpg" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="~/Assets/ImagesSlideshow/slideshow2.jpg" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="~/Assets/ImagesSlideshow/slideshow3.jpg" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="~/Assets/ImagesSlideshow/slideshow4.jpg" style="width:100%;">
                        </div>

                        <div class="item">
                            <img src="~/Assets/ImagesSlideshow/slideshow5.jpg" style="width:100%;">
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!-- Nút tròn điều khiển slideshow-->
                <div style="text-align:center">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>
                    <span class="dot" onclick="currentSlide(4)"></span>
                    <span class="dot" onclick="currentSlide(5)"></span>
                </div>
            </div>
        </div>
        <div class="underlined-title">
            <div class="editContent">
                <span></span>
            </div>
            <div class="wow-hr type_short">
                <span class="wow-hr-h">
                    <i class="fas fa-fast-backward"></i>
                    <i class="fa fa-star"></i>
                    <i class="fas fa-fast-forward"></i>
                </span>
            </div>
        </div>
        <div class="underlined-title">
            <div class="editContent">
                <h1 class="text-center latestitems">BEST SELLER</h1>
            </div>
            <div class="wow-hr type_short">
                <span class="wow-hr-h">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                </span>
            </div>
        </div>

        <div class="row">
            <div class="nonloop owl-carousel">
                @foreach (var _food in Model)
                {
                    if (_food.Trending == "BestSeller")
                    {
                        <div class="item">
                            <div class="productbox">
                                <div class="fadeshop">
                                    <div class="captionshop text-center" style="display: none;">
                                        <h3>@Html.DisplayFor(modelItem => _food.NameFood)</h3>
                                        <p>
                                            @Html.DisplayFor(modelItem => _food.DesFood)
                                        </p>
                                        @if (_food.StatusFood == true)
                                        {
                                            <p>Số lượng : @Html.DisplayFor(modelItem => _food.QuantityFood)</p>
                                            <p>Còn hàng</p>
                                            <p>
                                                <a href="/ShopingCart/AddToCart/@_food.IDFood" class="learn-more detailslearn"><i class="fa fa-shopping-cart"></i> Purchase</a>
                                                <a href="@Url.Action("Details", "Home", new { id = _food.IDFood })" class="learn-more detailslearn"><i class="fa fa-link"></i>Details</a>
                                            </p>
                                        }
                                        else
                                        {
                                            <p style="display:none">@Html.DisplayFor(modelItem => _food.QuantityFood)</p>
                                            <p style="color:red">hết hàng</p>
                                            <p style="display:none">
                                                <a href="/ShopingCart/AddToCart/@_food.IDFood" class="learn-more detailslearn" style="display:none"><i class="fa fa-shopping-cart"></i> Purchase</a>
                                                <a href="@Url.Action("Details", "Home", new { id = _food.IDFood })" class="learn-more detailslearn"><i class="fa fa-link"></i>Details</a>
                                            </p>
                                        }
                                    </div>
                                    <span class="maxproduct"><img src="@Url.Content(_food.ImageFood)" alt="" style="height:350px; width:350px"></span>
                                </div>
                                <div class="product-details">
                                    <a href="#">
                                        <h1>@Html.DisplayFor(modelItem => _food.NameFood)</h1>
                                    </a>
                                    <span class="price">
                                        <span class="edd_price">@Html.DisplayFor(modelItem => _food.PriceFood)</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }

                }
            </div>
            <script>
                $('.nonloop').owlCarousel({
                    center: true,
                    items: 2,
                    loop: false,
                    margin: 10,
                    responsive: {
                        600: {
                            items: 4
                        }
                    }
                });
                
            </script>
        </div>
    </div>
</section>
